@using ServiceApp.Services.Models.CarOwner

@model IEnumerable<CarOwnerViewModel>

<div id="create-offer-btn">
    <a asp-controller="CarOwner" asp-action="Create" class="btn btn-primary">+ Нов клиент</a>
</div>

<div class="container-fluid">
    @if (Model.Count() == 0)
    {
        <h4>Все още нямате регистрирани клиенти</h4>
    }
    else
    {
        <div class="container-fluid">
            <table class="table table-striped">
                <tr>
                    <th>Име</th>
                    <th>Булстат</th>
                    <th>Град</th>
                    <th>Адрес</th>
                    <th>Задължение</th>
                    <th>Телефон</th>
                </tr>
                @foreach (var client in Model)
                {
                <tr>
                    <td>@client.Name</td>
                    <td>@client.Bulstat</td>
                    <td>@client.City</td>
                    <td>@client.Address</td>
                    <td>@client.Obligation</td>
                    <td>@client.Telephone</td>
                    <td><a asp-controller="CarOwner" asp-action="Details" asp-route-id="@client.Id" class="btn btn-primary">Детайли</a></td>
                </tr>
                    
                }
            </table>
        </div>
    }
</div>
