@using ServiceApp.Web.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ServiceAppUser> SignInManager
@inject UserManager<ServiceAppUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    
<ul class="nav navbar-nav">
    <li><a asp-controller="Offers" asp-action="GetAll">Оферти</a></li>
    <li><a href="#">Поръчки</a></li>
    <li><a href="#">Склад</a></li>
    <li><a href="#">Клиенти</a></li>
</ul>
    

    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Излез</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Регистиране</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Вход</a></li>
    </ul>
}